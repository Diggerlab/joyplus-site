<h2>分类</h2>
<form action="/categories" method="post">
	<fieldset style="width:400px">
		<legend>新建分类</legend>
		<div>
			<label for="">名称</label>
			<input type="text" size="50" name="category[name]">
		</div>
		<div>
			<label for="">Slug</label>
			<input type="text" size="50" name="category[slug]">
		</div>
		<div>
			<input type="submit" value="保存">
		</div>

	</fieldset>
</form>

<h2>已有分类</h2>
<ul>
	<% @categories.each do |category|%>
	<li><%= category.name %></li>
	<% end %>
</ul>