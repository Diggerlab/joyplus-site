<%= content_for :content do  %>
<ul class="news_list">
	<% @articles.each do |article| %>
	<li><span class="floleft"><%= link_to article.title, news_path(article.slug) %></span><span class="time"><%= format_time article.created_at %></span></li>
	<% end if @articles %>
</ul>
<div class="clear"></div>
<%= paginate @articles if @articles %>
<% end %>